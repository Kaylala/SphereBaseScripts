[Events AILeatherWolf]
// Summon Pack
// Might need some work.
On=@CombatStart
If !(<Tag0.Howl>)
Say @030,,2 1113132	//"The leather wolf howls for help"
 Tag.Howl=1
 Serv.NewNPC cLeatherWolf
 New.P=<P>
 New.Home=<P>
 New.HomeDist=9
 New.Tag.Howl=1	// Summoned wolves shouldn't be able to get more backup.
 New.Attack <Src>
 Serv.NewDupe <New>
 New.Attack <Src>
 Serv.NewDupe <New>
 New.Attack <Src>
 Return
EndIf

